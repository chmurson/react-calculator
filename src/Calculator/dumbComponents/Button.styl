.custom-button
  background-color white
  padding: 1
  border: 0
  &--active {
    background-color lightgray
  }
  &:focus
    padding 0
    border: 1px solid #0074D9
    outline none

.custom-button
  overflow: hidden

  padding: 24px

  cursor: pointer
  user-select: none
  transition: all 150ms linear
  text-align: center
  white-space: nowrap
  text-decoration: none !important

  color: #fff
  border: 0 none
  border-radius: 4px

  font-size: 13px
  font-weight: 500
  line-height: 1.3

  -webkit-appearance: none
  -moz-appearance: none
  appearance: none

  box-shadow: 2px 5px 10px var(--color-smoke)

  &:hover
    transition: all 150ms linear

    opacity: .85


  &:active, &--active
    transition: all 150ms linear
    opacity: .75


  &:focus
    outline: 1px dotted #959595
    outline-offset: -4px



.custom-button
  &--regular {
    color: #202129
    background-color: #f2f2f2

    &:hover {
      color: #202129
      background-color: #e1e2e2
      opacity: 1
    }

    &:active, &.custom-button--active {
      background-color: #d5d6d6
      opacity: 1
    }
  }
